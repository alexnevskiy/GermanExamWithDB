<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/aquaExam</item>
        <item name="colorPrimaryDark">@color/blueExam</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:windowFullscreen">true</item>
    </style>

    <style name="BottomNavigationViewBigSize" parent="@style/TextAppearance.AppCompat.Caption">
        <item name="android:textSize">50sp</item>
    </style>

    <style name="MyRatingBar" parent="Theme.AppCompat">
        <item name="colorControlActivated">@color/duskYellow</item>
        <item name="colorControlNormal">@color/lightGrey</item>
    </style>

</resources>